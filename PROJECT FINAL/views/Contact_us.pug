extends Base.pug

block content
  // Hero Part
  nav(aria-label='breadcrumb')
    ol.breadcrumb
      li.breadcrumb-item
        a(href='/')
          span.color-front(style='margin-left:10px')
            strong Home
      li.breadcrumb-item
        a(href='Contact_us')
          span.color-front(style='margin-left:10px')
            strong Contact Us
  // Page Title Part
  .page_name
    h2 Contact Us
    img(src='../static/ALL IMAGE/APPLY section/line.png')
  section.ftco-section.color-front(style='margin-top: -15px; background-color: rgb(255, 255, 255);')
    .container
      .row.justify-content-center
        .col-md-12
          .wrapper
            .row.no-gutters.faqcard
              .col-lg-8.col-md-7.order-md-last.d-flex.align-items-stretch
                .contact-wrap.w-100.p-md-5.p-4
                  h3.mb-4 Get in touch
                  #form-message-warning.mb-4
                  #form-message-success.mb-4
                    | Your message was sent, thank you!
                  form#contactForm.contactForm(method='POST' name='contactForm' novalidate='novalidate')
                    .row
                      .col-md-6
                        .form-group
                          label.label(for='name') Full Name
                          input#name.form-control(type='text' name='name' placeholder='Name')
                      .col-md-6
                        .form-group
                          label.label(for='email') Email Address
                          input#email.form-control(type='email' name='email' placeholder='Email')
                      .col-md-12
                        .form-group
                          label.label(for='subject') Subject
                          input#subject.form-control(type='text' name='subject' placeholder='Subject')
                      .col-md-12
                        .form-group
                          label.label(for='#') Message
                          textarea#message.form-control(name='message' cols='30' rows='4' placeholder='Message')
                      .col-md-12
                        .form-group
                          input.get-btn-runded(type='button' value='Send Message')
                          .submitting
              .col-lg-4.col-md-5.d-flex.align-items-stretch.color-front.faqcard
                .info-wrap.bg-primary.w-100.p-md-5.p-4
                  h3 Let&apos;s get in touch
                  p.mb-4 We&apos;re open for any suggestion or just to have a chat
                  .dbox.w-100.d-flex.align-items-start
                    .d-flex.align-items-center.justify-content-center
                      span.fa.fa-map-marker
                    .text.pl-3(style='color: rgb(255, 255, 255);')
                      p
                        span Address:
                        |  3/20 Girija Para Lane, Khagra, Berhampore,
                        |  Murshidabad, West Bengal, PIN Code-742103
                  .dbox.w-100.d-flex.align-items-center
                    .d-flex.align-items-center.justify-content-center
                      span.fa.fa-phone
                    .text.pl-3
                      p
                        span Phone:
                        a(href='tel://+91 9434071442')
                          | 9434071442
                          br
                          | 8170057060 / 9333147958
                  .dbox.w-100.d-flex.align-items-center
                    .d-flex.align-items-center.justify-content-center
                      span.fa.fa-paper-plane
                    .text.pl-3
                      p
                        span Email:
                        a(href='mailto:somen.bhb@gmail.com') somen.bhb@gmail.com
