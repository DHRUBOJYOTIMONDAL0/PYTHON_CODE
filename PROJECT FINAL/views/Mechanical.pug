extends BaseCourse.pug
block  content
  // Hero Part
  nav(aria-label='breadcrumb')
    ol.breadcrumb
      li.breadcrumb-item
        a(href='/')
          span.color-front(style='margin-left:10px')
            strong Home
      li.breadcrumb-item
        a(href='Course')
          span.color-front(style='margin-left:10px')
            strong Course
      li.breadcrumb-item
        a(href='Mechanical')
          span.color-front(style='margin-left:10px')
            strong Mechanical Engineering
  // Page Title Part
  .page_name
    h2 Mechanical Engineering
    img(src='../static/ALL IMAGE/APPLY section/line.png')
  // Slider Part
  #carouselExampleCaptions.carousel.slide.carousel-fade(data-ride='carousel')
    ol.carousel-indicators
      li.active(data-target='#carouselExampleCaptions' data-slide-to='0')
      li(data-target='#carouselExampleCaptions' data-slide-to='1')
      li(data-target='#carouselExampleCaptions' data-slide-to='2')
    .carousel-inner
      .carousel-item.active
        img.d-block.w-100(src='../static/ALL IMAGE/MECHANICAL img/firstIND.jpg' height='550px' alt='...')
        .carousel-caption.d-none.d-md-block
          h2 OUR COURSES
          p Building a better world, one course at a time
      .carousel-item
        img.d-block.w-100(src='../static/ALL IMAGE/MECHANICAL img/secondIND.jpg' height='550px' alt='...')
        .carousel-caption.d-none.d-md-block
          h2 OUR COURSES
          p Building a better world, one course at a time
      .carousel-item
        img.d-block.w-100(src='../static/ALL IMAGE/MECHANICAL img/thirdIND.jpg' height='550px' alt='...')
        .carousel-caption.d-none.d-md-block
          h2 OUR COURSES
          p Building a better world, one course at a time
    a.carousel-control-prev(href='#carouselExampleCaptions' role='button' data-slide='prev')
      span.carousel-control-prev-icon(aria-hidden='true')
      span.sr-only Previous
    a.carousel-control-next(href='#carouselExampleCaptions' role='button' data-slide='next')
      span.carousel-control-next-icon(aria-hidden='true')
      span.sr-only Next
  // Our Faculties member
